            android:textColor="#ff00ff" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#00ff00"
            android:text="텍스트"
            android:textColor="#ff00ff" />

